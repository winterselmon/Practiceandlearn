<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_photos_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xyz.practiceandlearn.PhotosTestActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txttime"
            android:textSize="20sp"
            android:layout_alignParentLeft="true"
            android:text=""/>

        <TextView
            android:text=""
            android:id="@+id/txtnum"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <ImageView
            android:layout_below="@+id/txttime"
            android:id="@+id/imgPhotosTest"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="170dp"
            android:layout_width="170dp"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:id="@+id/relative1_photo_test"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/imgPhotosTest"
            >

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rdoGroup1_photo_test">

                <RadioButton
                    android:text="A."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="50dp"
                    android:id="@+id/rdoA_photo_test" />

                <RadioButton
                    android:text="B."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rdoA_photo_test"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/rdoB_photo_test" />

                <RadioButton
                    android:text="C."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rdoB_photo_test"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/rdoC_photo_test" />

                <RadioButton
                    android:text="D."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rdoC_photo_test"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/rdoD_photo_test" />
            </RadioGroup>
        </RelativeLayout>



        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_below="@id/relative1_photo_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Back"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnBackTest1"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />



            <Button
                android:text="Next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:id="@+id/btnNextTest1" />



        </RelativeLayout>


    </RelativeLayout>

</ScrollView>
